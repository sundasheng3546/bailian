<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/color_f8">
    <include layout="@layout/a_view_actionbar"
        android:id="@+id/title_in"/>

    <TextView
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存图片"
        android:textColor="#ff3875ff"
        android:gravity="center"
        android:background="@drawable/save_bg1"
        android:textSize="17sp"
        android:padding="@dimen/dp15"
        android:layout_margin="@dimen/dp30"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:layout_marginTop="@dimen/dp30"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/new_sharecare"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/dp30"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_below="@+id/title_in"
        android:layout_above="@+id/save"/>




</RelativeLayout>