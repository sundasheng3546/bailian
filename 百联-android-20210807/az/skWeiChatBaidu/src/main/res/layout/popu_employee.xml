<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_basic_employee"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:text="@string/detail"
        android:textColor="@color/black"
        android:textSize="@dimen/pop_window" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/pop_line" />

    <TextView
        android:id="@+id/tv_change_department"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:text="@string/change_departement"
        android:textColor="@color/black"
        android:textSize="@dimen/pop_window" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/pop_line" />

    <TextView
        android:id="@+id/tv_modify_position"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:text="@string/modify_job"
        android:textColor="@color/black"
        android:textSize="@dimen/pop_window" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/pop_line" />

    <TextView
        android:id="@+id/tv_delete_employee"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:text="@string/del_employee"
        android:textColor="@color/black"
        android:textSize="@dimen/pop_window" />

</LinearLayout>
